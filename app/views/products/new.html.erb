<h1>Create Product</h1>

<%= form_for @product, url: products_path do |f| %>
  <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
  </p>
  <p>
      <%= f.label :price %>
      <%= f.text_field :price %>
  </p>
  <p>
      <%= f.label :description %>
      <%= f.text_field :description %>
  </p>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select one!") %>
  <p><%= f.submit %></p>
<% end %>