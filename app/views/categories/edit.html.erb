<h1>Edit Category ID #<%= @category.id %></h1>
<%= link_to "Back to Categories", category_path %>

<%= form_for @category do |f| %>
  <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
  </p>
  <p>
      <%= f.label :description %>
      <%= f.text_field :description %>
  </p>
  <p>
      <%= f.submit %>
      <%= link_to "Delete", category_path(@category), :method=>:delete %>
  </p>
<% end %>